#include <list>
#include <string>
#include <vector>

using namespace std;

//class BusinessTask {
//public:
  string getTask (vector<string> list, int n) {
		
    std::list tasks(list.begin(), list.end());
    int taskToDelete = list.size()-1;
    auto it = tasks.begin();
    
    for (int i = 0; i < taskToDelete; ++i) {
      
      int steps = n % (list.size()+1);

      for (int i = 1; i < steps; ++i) {
	if (it == tasks.end()) it = tasks.begin();
	it++;
      }

      auto toDelete = it;
      it++;
      tasks.erase(toDelete);
    }

    return tasks.front();
  }
    //  };

int main(void) {
  vector<vector<string>> sequences{{"a","b","c","d"},
      {"a","b","c","d","e"},
	{"a","b"}};
  vector<string> nums{2,3,1000};

  for (int i = 0; i < nums.size(); ++i) {
    cout << getTask(sequences[i],nums[i]) << endl;
  }
}
